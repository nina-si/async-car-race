{
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "lib": ["dom", "es6", "dom.iterable", "scripthost", "es2021"],
        "sourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules"]
}
